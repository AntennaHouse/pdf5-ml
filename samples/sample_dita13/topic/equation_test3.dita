        <equation-number/>
        <mathml>
          <math display="block" xmlns="http://www.w3.org/1998/Math/MathML">
            <mrow>
              <mi>c</mi>
              <mo>=</mo>
              <mover>
                <mover>
                  <mrow>
                    <munder>
                      <munder>
                        <mrow>
                          <mspace width="1em"/>
                          <mi>a</mi>
                          <mspace width="1em"/>
                        </mrow>
                        <mo>&#x23DF;</mo>
                      </munder>
                      <mtext>real</mtext>
                    </munder>
                    <mo>+</mo>
                    <munder>
                      <munder>
                        <mrow>
                          <mspace width="1em"/>
                          <mi>b</mi>
                          <mo>&#x2062;</mo>
                          <mi>&#x2148;</mi>
                          <mspace width="1em"/>
                        </mrow>
                        <mo>&#x23DF;</mo>
                      </munder>
                      <mtext>imaginary</mtext>
                    </munder>
                  </mrow>
                  <mo>&#x23DE;</mo>
