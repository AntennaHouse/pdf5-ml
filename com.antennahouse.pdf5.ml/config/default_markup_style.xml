<style-definition xmlns:axf="http://www.antennahouse.com/names/XSL/Extensions"
    xmlns:fo="http://www.w3.org/1999/XSL/Format"
    xmlns:ahp="http://www.antennahouse.com/names/XSLT/Document/PageControl"
    xmlns="http://www.antennahouse.com/names/XSLT/Document/Layout">
    
    <variables>
        <variable name="Markup_Font">$General_Monospace_Font</variable>
    </variables>
    
    <attribute-sets>
        <attribute-set name="atsMarkupName">
            <attribute name="font-family">$Markup_Font</attribute>
        </attribute-set>
    </attribute-sets>
    
</style-definition>
