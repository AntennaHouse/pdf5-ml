<style-definition 
 xmlns:axf="http://www.antennahouse.com/names/XSL/Extensions"
 xmlns="http://www.antennahouse.com/names/XSLT/Document/Layout">
 
 <variables>
        <!-- Fonts -->
        <variable name="General_Serif_Font">Batang</variable>
        <variable name="General_Sans_Serif_Font">Gulim</variable>
        <variable name="General_Monospace_Font">Courier New,GulimChe</variable>
        <variable name="General_Text_Font">$General_Serif_Font</variable>
        <variable name="General_Title_Font">$General_Sans_Serif_Font</variable>
        <variable name="General_Region_Before_Font">$General_Serif_Font</variable>
        <variable name="General_Region_After_Font">$General_Serif_Font</variable>
     
        <!-- Literals -->
         <variable name="Toc_Title">목차</variable>
         <variable name="Figure_List_Title">그림일람</variable>
         <variable name="Table_List_Title">표일람</variable>
         <variable name="Abbreviations_List_Title">약어일람</variable>
         <variable name="Trademark_List_Title">상표일람</variable>
         <variable name="Bibliographic_List_Title">참고문헌</variable>
         <variable name="Glossary_List_Title">용어집</variable>
         <variable name="Appendices_Title">부록</variable>
         <variable name="Appendix_Title">부록</variable>
         <variable name="Index_Title">색인</variable>

        <!-- Literals for thumbnail -->
        <variable name="Toc_Thumbnail_Label">목차</variable>
        <variable name="Appendix_Thumbnail_Label">부록</variable>
        <variable name="Index_Thumbnail_Label">색인</variable>

        <variable name="Toc_Thumbnail_Title"></variable>
        <variable name="Appendix_Thumbnail_Title"></variable>
        <variable name="Index_Thumbnail_Title"></variable>
     
        <!-- Literals for note -->
     	<variable name="Note_Note">비고</variable>
     
        <!-- Index related -->
        <!-- Index See prefix and suffix -->
        <variable name="Index_Symbol_Label">기호·숫자</variable>
        <variable name="See_Prefix_Level1">. </variable>
        <variable name="See_Suffix_Level1"> 참조</variable>
        <variable name="See_Prefix_Level2"></variable>
        <variable name="See_Suffix_Level2"> 참조</variable>
        
        <!-- Index See Also prefix and suffix -->
        <variable name="See_Also_Prefix"></variable>
        <variable name="See_Also_Suffix"> 참조 항목</variable>



 </variables>
 <attribute-sets>
 
    <index-attribute>
        <attribute-set name="atsIndexGroupTitle">
            <attribute name="font-weight">normal</attribute>
        </attribute-set>

        <!-- See (no indexterm nested) inline -->
        <attribute-set name="atsSeePrefix">
            <attribute name="font-style">normal</attribute>
        </attribute-set>

        <attribute-set name="atsSeeSuffix">
            <attribute name="font-style">normal</attribute>
        </attribute-set>

        <!-- See Also inline -->
        <attribute-set name="atsSeeAlsoPrefix">
            <attribute name="font-style">normal</attribute>
        </attribute-set>

        <attribute-set name="atsSeeAlsoSuffix">
            <attribute name="font-style">normal</attribute>
        </attribute-set>

    </index-attribute>

    <title-attribute>
        <!-- Frontmatter -->
        <attribute-set name="atsFmHeader1">
            <attribute name="font-weight">normal</attribute>
        </attribute-set>

        <attribute-set name="atsFmHeader2">
            <attribute name="font-weight">normal</attribute>
        </attribute-set>

        <attribute-set name="atsFmHeader3">
            <attribute name="font-weight">normal</attribute>
        </attribute-set>
    
        <!-- Part/Chapter Heading -->
        <!-- level 1 -->
        <attribute-set name="atsChapterHead1">
            <attribute name="font-weight">normal</attribute>
        </attribute-set>

        <!-- level 2 -->
        <attribute-set name="atsChapterHead2">
            <attribute name="font-weight">normal</attribute>
        </attribute-set>

        <!-- level 3 -->
        <attribute-set name="atsChapterHead3">
            <attribute name="font-weight">normal</attribute>
        </attribute-set>

        <!-- Appendix Heading -->
        <!-- level 1 -->
        <attribute-set name="atsAppendixHead1">
            <attribute name="font-weight">normal</attribute>
        </attribute-set>

        <!-- level 2 -->
        <attribute-set name="atsAppendixHead2">
            <attribute name="font-weight">normal</attribute>
        </attribute-set>

        <!-- level 3 -->
        <attribute-set name="atsAppendixHead3">
            <attribute name="font-weight">normal</attribute>
        </attribute-set>

    </title-attribute>

 </attribute-sets>

</style-definition>
